{
	"name": "Data Merge",
	"properties": {
		"activities": [
			{
				"name": "If Condition1",
				"type": "IfCondition",
				"dependsOn": [
					{
						"activity": "Check If Parent Table Exists",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"expression": {
						"value": "@greater(activity('Check If Parent Table Exists').output.firstRow.Count,0)",
						"type": "Expression"
					},
					"ifFalseActivities": [
						{
							"name": "Copy Entire Table To SQL Pool",
							"type": "Copy",
							"dependsOn": [],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [
								{
									"name": "Source",
									"value": "@{pipeline().parameters.item.SchemaName}.@{pipeline().parameters.item.TableName}"
								},
								{
									"name": "Destination",
									"value": "@{pipeline().parameters.item.SchemaName}.@{pipeline().parameters.item.TableName}"
								}
							],
							"typeProperties": {
								"source": {
									"type": "OracleSource",
									"partitionOption": "None",
									"queryTimeout": "02:00:00"
								},
								"sink": {
									"type": "SqlDWSink",
									"tableOption": "autoCreate",
									"disableMetricsCollection": false
								},
								"enableStaging": false,
								"translator": {
									"type": "TabularTranslator",
									"typeConversion": true,
									"typeConversionSettings": {
										"allowDataTruncation": true,
										"treatBooleanAsNumber": false
									}
								}
							},
							"inputs": [
								{
									"referenceName": "GloviaProd",
									"type": "DatasetReference",
									"parameters": {
										"tablename": {
											"value": "@pipeline().parameters.item.TableName",
											"type": "Expression"
										},
										"schemaname": {
											"value": "@pipeline().parameters.item.SchemaName",
											"type": "Expression"
										}
									}
								}
							],
							"outputs": [
								{
									"referenceName": "AzureSynapseDatabase",
									"type": "DatasetReference",
									"parameters": {
										"TableName": {
											"value": "@pipeline().parameters.item.TableName",
											"type": "Expression"
										},
										"DbName": {
											"value": "@pipeline().parameters.item.DbName",
											"type": "Expression"
										},
										"SchemaName": {
											"value": "@pipeline().parameters.item.SchemaName",
											"type": "Expression"
										}
									}
								}
							]
						}
					],
					"ifTrueActivities": [
						{
							"name": "Wait2",
							"type": "Wait",
							"dependsOn": [],
							"userProperties": [],
							"typeProperties": {
								"waitTimeInSeconds": 1
							}
						}
					]
				}
			},
			{
				"name": "Check If Parent Table Exists",
				"type": "Lookup",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "SqlPoolSource",
						"sqlReaderStoredProcedureName": "[Config].[usp_CreateTableIfNotExistant]",
						"storedProcedureParameters": {
							"SchemaName": {
								"type": "String",
								"value": {
									"value": "@pipeline().parameters.item.SchemaName",
									"type": "Expression"
								}
							},
							"TableName": {
								"type": "String",
								"value": {
									"value": "@pipeline().parameters.item.TableName",
									"type": "Expression"
								}
							}
						},
						"queryTimeout": "02:00:00"
					},
					"dataset": {
						"referenceName": "Modineer",
						"type": "DatasetReference"
					}
				}
			},
			{
				"name": "Check If Delta Table Exists",
				"type": "Lookup",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "SqlPoolSource",
						"sqlReaderStoredProcedureName": "[Config].[usp_CreateTableIfNotExistant]",
						"storedProcedureParameters": {
							"SchemaName": {
								"type": "String",
								"value": "Delta"
							},
							"TableName": {
								"type": "String",
								"value": {
									"value": "@pipeline().parameters.item.TableName",
									"type": "Expression"
								}
							}
						},
						"queryTimeout": "02:00:00"
					},
					"dataset": {
						"referenceName": "Modineer",
						"type": "DatasetReference"
					}
				}
			},
			{
				"name": "If Condition1_copy1",
				"type": "IfCondition",
				"dependsOn": [
					{
						"activity": "Check If Delta Table Exists",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"expression": {
						"value": "@greater(activity('Check If Delta Table Exists').output.firstRow.Count,0)",
						"type": "Expression"
					},
					"ifFalseActivities": [
						{
							"name": "Raw Data Copy - SQL Pool_copy1",
							"type": "Copy",
							"dependsOn": [],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": true,
								"secureInput": false
							},
							"userProperties": [
								{
									"name": "Source",
									"value": "@{pipeline().parameters.item.FileSystem}/@{concat(pipeline().parameters.item.SchemaName, '/', pipeline().parameters.item.TableName, '/', pipeline().parameters.DateData.Year, '/', pipeline().parameters.DateData.Month, '/', pipeline().parameters.DateData.Day)}/"
								},
								{
									"name": "Destination",
									"value": "@{'Delta'}.@{pipeline().parameters.item.TableName}"
								}
							],
							"typeProperties": {
								"source": {
									"type": "ParquetSource",
									"storeSettings": {
										"type": "AzureBlobFSReadSettings",
										"recursive": true,
										"wildcardFolderPath": {
											"value": "@{pipeline().parameters.item.SchemaName}/@{pipeline().parameters.item.TableName}/@{pipeline().parameters.DateData.Year}/@{pipeline().parameters.DateData.Month}/@{pipeline().parameters.DateData.Day}",
											"type": "Expression"
										},
										"wildcardFileName": "*",
										"enablePartitionDiscovery": false
									}
								},
								"sink": {
									"type": "SqlDWSink",
									"tableOption": "autoCreate",
									"disableMetricsCollection": false
								},
								"enableStaging": false
							},
							"inputs": [
								{
									"referenceName": "ReadParquet",
									"type": "DatasetReference",
									"parameters": {
										"FileSystem": {
											"value": "@pipeline().parameters.item.FileSystem",
											"type": "Expression"
										},
										"FilePath": {
											"value": "@{pipeline().parameters.item.SchemaName}/@{pipeline().parameters.item.TableName}/@{pipeline().parameters.DateData.Year}/@{pipeline().parameters.DateData.Month}/@{pipeline().parameters.DateData.Day}",
											"type": "Expression"
										}
									}
								}
							],
							"outputs": [
								{
									"referenceName": "AzureSynapseDatabase",
									"type": "DatasetReference",
									"parameters": {
										"TableName": {
											"value": "@pipeline().parameters.item.TableName",
											"type": "Expression"
										},
										"DbName": {
											"value": "@pipeline().parameters.item.DbName",
											"type": "Expression"
										},
										"SchemaName": "Delta"
									}
								}
							]
						}
					],
					"ifTrueActivities": [
						{
							"name": "Wait1",
							"type": "Wait",
							"dependsOn": [],
							"userProperties": [],
							"typeProperties": {
								"waitTimeInSeconds": 1
							}
						}
					]
				}
			},
			{
				"name": "Merge SP After Table Created",
				"type": "SqlPoolStoredProcedure",
				"dependsOn": [
					{
						"activity": "If Condition1",
						"dependencyConditions": [
							"Succeeded"
						]
					},
					{
						"activity": "If Condition1_copy1",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"sqlPool": {
					"referenceName": "Modineer",
					"type": "SqlPoolReference"
				},
				"typeProperties": {
					"storedProcedureName": "[Config].[usp_MergeData]",
					"storedProcedureParameters": {
						"KeyColumns": {
							"value": {
								"value": "@{pipeline().parameters.item.TableKeysArray}",
								"type": "Expression"
							},
							"type": "String"
						},
						"SchemaName": {
							"value": {
								"value": "@{pipeline().parameters.item.SchemaName}",
								"type": "Expression"
							},
							"type": "String"
						},
						"TableName": {
							"value": {
								"value": "@{pipeline().parameters.item.TableName}",
								"type": "Expression"
							},
							"type": "String"
						}
					}
				}
			},
			{
				"name": "Insert Delta Data To Production",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "Merge SP After Table Created",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "SqlDWSource",
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"sink": {
						"type": "SqlDWSink",
						"sqlWriterUseTableLock": false
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "AzureSynapseDatabase",
						"type": "DatasetReference",
						"parameters": {
							"TableName": {
								"value": "@pipeline().parameters.item.TableName",
								"type": "Expression"
							},
							"DbName": {
								"value": "@pipeline().parameters.item.DbName",
								"type": "Expression"
							},
							"SchemaName": "Delta"
						}
					}
				],
				"outputs": [
					{
						"referenceName": "AzureSynapseDatabase",
						"type": "DatasetReference",
						"parameters": {
							"TableName": {
								"value": "@pipeline().parameters.item.TableName",
								"type": "Expression"
							},
							"DbName": {
								"value": "@pipeline().parameters.item.DbName",
								"type": "Expression"
							},
							"SchemaName": {
								"value": "@pipeline().parameters.item.SchemaName",
								"type": "Expression"
							}
						}
					}
				]
			}
		],
		"parameters": {
			"item": {
				"type": "object"
			},
			"DateData": {
				"type": "object"
			}
		},
		"folder": {
			"name": "Master Data/Slave Pipeline"
		},
		"annotations": []
	}
}